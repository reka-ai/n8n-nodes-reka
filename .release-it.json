{
	"git": {
		"commitMessage": "chore: release v${version}",
		"tagName": "v${version}",
		"requireBranch": ["main", "develop"],
		"requireCleanWorkingDir": false
	},
	"github": {
		"release": true,
		"releaseName": "v${version}"
	},
	"npm": {
		"publish": true,
		"skipChecks": true
	},
	"hooks": {
		"before:init": ["npm run build", "npm run lint"]
	}
}
